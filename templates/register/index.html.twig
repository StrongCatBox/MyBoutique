{% extends 'base.html.twig' %}

{% block title %}Inscription myBoutique
{% endblock %}

{% block content %}

	<h1 class="mt-4">Inscription au site</h1>


	{{form_start(form)}}


	{{form_row(form.firstName,{'label':false, 'attr':{'placeholder':'Entrer le prenom'}})}}

	{{form_row(form.lastName,{'label':false, 'attr':{'placeholder':'Entrer le nom'}})}}


	{{form_row(form.email,{'label':false, 'attr':{'placeholder':'Entrer un email'}})}}

	{{form_row(form.password,{'label':false, 'attr':{'placeholder':'Entrer un mot de passe'}})}}
	{{form_row(form.confirmPassword, {'label':false, 'attr':{'placeholder':'confirmez le mot de passe'}})}}


	{{form_end(form)}}


{% endblock %}
