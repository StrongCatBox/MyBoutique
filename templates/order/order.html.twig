{% extends 'base.html.twig' %}

{% block title %}Valider ma Commande
{% endblock %}

{% block content %}

	<h1 class="mt-3">Je passe ma commande</h1>
	<p>Choisissez vos préférences avant de passer la votre commande</p>
	<hr>

	<div class="row">

		<div class="col-md-6">

			{% set formulaire %}
			{{form(form)}}

				{% endset %}

				{{formulaire | replace({'[br]':'<br>'}) | raw}}

			</div>

			<div class="col-md-6">

				<b>Recap de ma commande</b>
				<br>
				<b>Bouton payer</b>
			</div>

		</div>

	{% endblock %}
