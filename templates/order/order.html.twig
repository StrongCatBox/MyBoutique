{% extends 'base.html.twig' %}

{% block title %}Valider ma Commande
{% endblock %}

{% block content %}

	<div class="m-5">

		<h1 class="mt-3">Je passe ma commande</h1>
		<p>Choisissez vos préférences avant de passer la votre commande</p>
		<hr>

		<div class="row">

			<div class="col-md-6">

				{% set formulaire %}
				{{form(form)}}

					{% endset %}

					{{formulaire | replace({'[br]':'<br>'}) | raw}}

				</div>

				<div class="col-md-6">

					{% for product in cart %}

						<div class="row mt-3">
							<div class="col-2">
								<img src="/uploads/{{product.product.picture}}" alt="{{product.product.name}}" class="img-fluid">
							</div>

							<div class="col-8">
								{{product.product.name}}<br>
								<i>{{product.product.subtitle}}</i>
							</div>

							<div class="col-2 my-auto">{{product.quantity}}</div>

						</div>

					{% endfor %}

				</div>


			</div>

		</div>

	{% endblock %}
