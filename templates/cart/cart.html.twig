{% extends 'base.html.twig' %}

{% block title %}Mon panier
{% endblock %}

{% block content %}
<h1 class="mt-3">Mon panier</h1>
<p>Ensemble de vos produits ajoutés au panier</p>
<hr>


<table class="table">
	<thead>
		<tr>
			<th scope="col">Produits</th>
			<th scope="col">Noms</th>
			<th scope="col">Quantité</th>
			<th scope="col">Prix</th>
			<th scope="col">Total</th>
		</tr>
	</thead>
	<tbody>

		{% for product in cart %}


			<tr>
				<th scope="row"><img src="/uploads/{{product.product.picture}}" alt="" style="width:50px"></th>
				<td>{{product.product.name}}</td>
				<td>
					<a href="{{path('supress_cart',{'id':product.product.id})}}">
						<i class="fas fa-minus"></i>
					</a>
					{{product.quantity}}
					<a href="{{path('add_to_cart',{'id':product.product.id})}}">
						<i class="fas fa-plus"></i>
					</a>
				</td>
			</tr>
		</td>
		<td>{{product.product.price/100}}
			€</td>
		<td>{{(product.quantity*product.product.price/100) |number_format(2)}}
			€</td>
	</tbody>
</tr>{% endfor %}</tbody></table>{% endblock %}
