{% extends 'base.html.twig' %}

{% block title %}Hello AccountPasswordController!
{% endblock %}

{% block content %}
	<div class="container">
		<h1 class="mt-4">Modification du mot de passe</h1>

		{{ form_start(form, {'attr': {'class': 'mt-4'}}) }}

		<div class="row">
			<div class="col-md-6">
				{{ form_row(form.firstName, {'attr': {'class': 'form-control mb-3', 'placeholder': 'Pr√©nom'}}) }}
			</div>
			<div class="col-md-6">
				{{ form_row(form.lastName, {'attr': {'class': 'form-control mb-3', 'placeholder': 'Nom'}}) }}
			</div>
		</div>

		{{ form_row(form.email, {'attr': {'class': 'form-control mb-3', 'placeholder': 'Email'}}) }}
		{{ form_row(form.oldPassword, {'attr': {'class': 'form-control mb-3', 'placeholder': 'Ancien mot de passe'}}) }}
		{{ form_row(form.newPassword, {'attr': {'class': 'form-control mb-3', 'placeholder': 'Nouveau mot de passe'}}) }}
		{{ form_row(form.confirmNewPassword, {'attr': {'class': 'form-control mb-3', 'placeholder': 'Confirmer le nouveau mot de passe'}}) }}


		{{ form_end(form) }}
	</div>
{% endblock %}
