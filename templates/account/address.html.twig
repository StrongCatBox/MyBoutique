{% extends 'base.html.twig' %}

{% block title %}Mes adresses
{% endblock %}

{% block content %}
	<div class="container mt-3">
		<h1>Mes adresses</h1>

		<a href="{{ path('account_add_address') }}" class="btn btn-primary mt-3">Ajouter une nouvelle adresse</a>
		<p class="mt-3">Dans cet espace, vous gÃ©rez vos adresses.</p>
		<br><br>
		<a href="{{ path('account') }}">Retour</a><br>
		<hr>
	</div>
	<div class="container">
		<div class="row">
			{% for address in app.user.addresses %}
				<div class="col-md-4 mb-3">
					<div class="card">
						<div class="card-body">
							<h5 class="card-title">{{ address.name }}</h5>
							<p class="card-text">{{ address.address }}<br>{{ address.postal }}
								-
								{{ address.city }}</p>
							<div class="d-grid gap-2">
								<a href="{{path('account_edit_address',{'id':address.id})}}" class="btn btn-info btn-sm mb-1">Modifier</a>
								<a href="{{path('account_delete_address',{'id':address.id})}}" class="btn btn-danger btn-sm" onclick="return confirm('etes-vous sur ?')">Supprimer</a>
							</div>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
