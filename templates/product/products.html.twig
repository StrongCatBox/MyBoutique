{% extends 'base.html.twig' %}

{% block title %}Nos produits
{% endblock %}

{% block content %}

	<h1 class="mt-3">
		Nos produits
	</h1>

	<div class="row">

		<div class="row row-cols-1 row-cols-md-2 g-4">

			{% for product in products %}


				<div class="col">
					<div class="card">
						<a href="{{path('product',{'slug':product.slug})}}"><img src="/uploads/{{product.picture}}" class="card-img-top" alt="{{product.name}}"></a>
						<div class="card-body">
							<h5 class="card-title">{{product.name}}</h5>
							<p class="card-text">{{product.subtitle}}</p>
							<p>{{product.price/100}}
								â‚¬</p>
							<p>{{product.category}}</p>
							<button type="button" class="btn btn-primary">Primary</button>

						</div>
					</div>
				</div>


			{% endfor %}

		</div>

	</div>
{% endblock %}
